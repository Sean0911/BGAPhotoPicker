<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_photo_folder_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="150dp"
    android:paddingLeft="@dimen/bga_pp_size_level3"
    android:paddingRight="@dimen/bga_pp_size_level3">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_photo_folder_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bga_pp_shape_photo_folder_pw_bg"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/bga_pp_size_level1"
        android:scrollbars="none" />
</LinearLayout>